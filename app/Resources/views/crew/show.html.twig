{% extends 'base.html.twig' %}

{% block body %}
    <h1>Crew</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ crew.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ crew.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ crew.lastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if crew.birthDate %}{{ crew.birthDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crew_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('crew_edit', { 'id': crew.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
